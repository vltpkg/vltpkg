{
  "name": "@vltpkg/infra-build",
  "description": "Build scripts for this monorepo",
  "version": "0.0.0-0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vltpkg/vltpkg.git",
    "directory": "infra/build"
  },
  "tshy": {
    "selfLink": false,
    "dialects": [
      "esm"
    ],
    "sourceDialects": [
      "@vltpkg/source"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "dependencies": {
    "@vltpkg/cli": "workspace:*",
    "esbuild": "catalog:",
    "jscodeshift": "^17.0.0",
    "package-json-from-dist": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@types/eslint__js": "catalog:",
    "@types/jscodeshift": "^0.11.11",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tap": "catalog:",
    "tshy": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "license": "BSD-2-Clause-Patent",
  "engines": {
    "node": ">=22",
    "pnpm": "9"
  },
  "scripts": {
    "build:deno": "node dist/esm/bin.js --deno",
    "build:node": "node dist/esm/bin.js --node",
    "format": "prettier --write . --log-level warn --ignore-path ../../.prettierignore --cache",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --cache",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "prepare": "tshy",
    "presnap": "tshy",
    "snap": "tap",
    "pretest": "tshy",
    "test": "tap",
    "posttest": "tsc --project tsconfig.test.json",
    "watch": "tshy --watch"
  },
  "tap": {
    "extends": "../../tap-config.yaml",
    "disable-coverage": true,
    "timeout": 600
  },
  "prettier": "../../.prettierrc.js",
  "module": "./dist/esm/index.js",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@vltpkg/source": "./src/index.ts",
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  }
}
