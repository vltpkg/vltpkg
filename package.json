{
  "name": "@vltpkg/vltpkg",
  "version": "0.0.0-0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vltpkg/vltpkg.git"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@types/eslint__js": "catalog:",
    "@vltpkg/benchmark": "workspace:*",
    "@vltpkg/infra-build": "workspace:*",
    "@vltpkg/semver": "workspace:*",
    "@vltpkg/spec": "workspace:*",
    "chalk": "catalog:",
    "eslint": "catalog:",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "globals": "^15.14.0",
    "npm-check-updates": "^17.1.14",
    "prettier": "catalog:",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "semver": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "yaml": "^2.7.0"
  },
  "license": "BSD-2-Clause-Patent",
  "engines": {
    "node": ">=22",
    "pnpm": "9"
  },
  "scripts": {
    "benchmark": "./scripts/benchmark",
    "build:bundle": "vlt-build --outdir=.build-bundle bundle",
    "build:compile": "vlt-build --outdir=.build-compile compile",
    "deps:check": "node --no-warnings --experimental-strip-types scripts/check-deps.js",
    "fix": "pnpm fix:pkg && pnpm lint && pnpm format",
    "fix:pkg": "node --no-warnings --experimental-strip-types scripts/consistent-package-json.js",
    "format": "prettier --write . --log-level warn --ignore-path ./.prettierignore --cache",
    "format:check": "prettier --check . --ignore-path ./.prettierignore --cache",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "snap": "pnpm --silent --no-bail --report-summary run -r snap &>/dev/null || node scripts/report-test-failures.js",
    "test": "pnpm --silent --no-bail --report-summary -r test -- -Rsilent || node scripts/report-test-failures.js",
    "vlix": "./scripts/bins/vlix.ts",
    "vlr": "./scripts/bins/vlr.ts",
    "vlrx": "./scripts/bins/vlrx.ts",
    "vlt": "./scripts/bins/vlt.ts",
    "vlx": "./scripts/bins/vlx.ts"
  },
  "prettier": "./.prettierrc.js",
  "type": "module",
  "pnpm": {
    "patchedDependencies": {
      "tshy": "patches/tshy.patch"
    }
  }
}
