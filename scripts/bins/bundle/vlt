#!/bin/sh
set -eo pipefail
ROOT_DIR="$(cd "$(dirname "$0")/../../../" && pwd)"
if [ ! -f "$ROOT_DIR/.build-bundle/vlt.js" ]; then
  (cd $ROOT_DIR && pnpm vlt-build --bins=vlt --outdir=".build-bundle" bundle > /dev/null 2>&1)
fi
NODE_OPTIONS="--no-warnings --enable-source-maps" node "$ROOT_DIR/.build-bundle/vlt.js" "$@"
