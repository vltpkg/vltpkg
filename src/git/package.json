{
  "name": "@vltpkg/git",
  "description": "a util for spawning git from npm CLI contexts",
  "version": "0.0.0-0.1730239248325",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vltpkg/vltpkg.git",
    "directory": "src/git"
  },
  "tshy": {
    "selfLink": false,
    "dialects": [
      "esm"
    ],
    "sourceDialects": [
      "@vltpkg/source"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "dependencies": {
    "@types/promise-retry": "^1.1.6",
    "@vltpkg/error-cause": "workspace:*",
    "@vltpkg/git-scp-url": "workspace:*",
    "@vltpkg/pick-manifest": "workspace:*",
    "@vltpkg/promise-spawn": "workspace:*",
    "@vltpkg/semver": "workspace:*",
    "@vltpkg/spec": "workspace:*",
    "@vltpkg/which": "workspace:*",
    "lru-cache": "catalog:",
    "promise-retry": "^2.0.1",
    "retry": "^0.13.1"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@types/eslint__js": "catalog:",
    "@types/node": "catalog:",
    "@types/retry": "^0.12.5",
    "@vltpkg/types": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tap": "catalog:",
    "tshy": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "license": "ISC",
  "engines": {
    "node": "20 || >=22",
    "pnpm": "9"
  },
  "scripts": {
    "format": "prettier --write . --log-level warn --ignore-path ../../.prettierignore --cache",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --cache",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "prepare": "tshy",
    "presnap": "tshy",
    "snap": "tap",
    "pretest": "tshy",
    "test": "tap",
    "watch": "tshy --watch"
  },
  "tap": {
    "extends": "../../tap-config.yaml"
  },
  "prettier": "../../.prettierrc.js",
  "module": "./dist/esm/index.js",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@vltpkg/source": "./src/index.ts",
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "files": [
    "dist"
  ]
}
