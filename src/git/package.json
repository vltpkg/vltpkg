{
  "name": "@vltpkg/git",
  "description": "a util for spawning git from npm CLI contexts",
  "version": "5.0.7",
  "tshy": {
    "dialects": [
      "esm"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    },
    "selfLink": false
  },
  "dependencies": {
    "@types/promise-retry": "^1.1.6",
    "@vltpkg/error-cause": "workspace:*",
    "@vltpkg/git-scp-url": "workspace:*",
    "@vltpkg/pick-manifest": "workspace:*",
    "@vltpkg/promise-spawn": "workspace:*",
    "@vltpkg/semver": "workspace:*",
    "@vltpkg/spec": "workspace:*",
    "@vltpkg/which": "workspace:*",
    "lru-cache": "^10.2.2",
    "promise-retry": "^2.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.8",
    "@types/retry": "^0.12.5",
    "@vltpkg/types": "workspace:*",
    "eslint": "^9.8.0",
    "prettier": "^3.3.2",
    "tap": "^20.0.1",
    "tshy": "^1.16.1",
    "typedoc": "^0.26.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1"
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "npm publish",
    "prepublishOnly": "git push origin --follow-tags",
    "prepare": "tshy",
    "pretest": "npm run prepare",
    "presnap": "npm run prepare",
    "test": "tap",
    "snap": "tap",
    "format": "prettier --write . --log-level warn --ignore-path ../../.prettierignore --cache",
    "typedoc": "typedoc",
    "lint:format": "prettier --check . --ignore-path ../../.prettierignore --cache",
    "lint": "npm run lint:format; npm run lint:code",
    "lint:code": "eslint ."
  },
  "tap": {
    "extends": "../../tap-config.yaml"
  },
  "prettier": "../../.prettierrc.json",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "source": "./src/index.ts",
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "license": "ISC"
}
