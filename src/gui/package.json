{
  "name": "@vltpkg/gui",
  "description": "Look under the hood of a vlt install in HD",
  "version": "0.0.0-0",
  "private": true,
  "dependencies": {
    "@radix-ui/react-slot": "catalog:",
    "@vltpkg/dep-id": "workspace:*",
    "@vltpkg/fast-split": "workspace:*",
    "@vltpkg/graph": "workspace:*",
    "@vltpkg/query": "workspace:*",
    "@vltpkg/spec": "workspace:*",
    "@vltpkg/types": "workspace:*",
    "class-variance-authority": "catalog:",
    "clsx": "catalog:",
    "lucide-react": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwind-merge": "catalog:",
    "tailwindcss-animate": "catalog:",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.1",
    "@types/diffable-html": "^5.0.2",
    "@types/eslint__js": "catalog:",
    "@types/jsdom": "^21.1.7",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "^4.3.3",
    "chokidar-cli": "^3.0.0",
    "diffable-html": "^5.0.0",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "jsdom": "^25.0.1",
    "prettier": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  },
  "license": "BSD-2-Clause-Patent",
  "engines": {
    "node": "20 || >=22"
  },
  "scripts": {
    "format": "prettier --write . --log-level warn --ignore-path ../../.prettierignore --cache",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --cache",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "prepare": "npm run prepare:css && npm run prepare:js -- --define:process.env.NODE_ENV='\"production\"'",
    "prepare:css": "tailwindcss -i ./src/main.css -o ./dist/main.css",
    "prepare:js": "esbuild src/index.tsx --target=chrome129,edge129,firefox130,safari18 --sourcemap --outdir=dist --bundle --format=cjs --jsx=automatic",
    "snap": "vitest --no-watch -u",
    "test": "vitest",
    "posttest": "tsc --noEmit",
    "watch": "chokidar 'src/**/*.{ts,tsx,css}' -c 'npm run prepare:css && npm run prepare:js'"
  },
  "prettier": "../../.prettierrc.js",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist"
  }
}
