{
  "name": "@vltpkg/vsr",
  "version": "0.3.0",
  "license": "FSL-1.1-MIT",
  "author": "vlt technology inc. <support@vlt.sh> (http://vlt.sh)",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vltpkg/vltpkg.git",
    "directory": "src/vsr"
  },
  "bin": "./dist/bin/vsr.js",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "format": "prettier --write . --log-level warn --ignore-path ../../.prettierignore --cache",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --cache",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio --port 4985",
    "db:setup": "npx wrangler d1 execute vsr-local-database --file=src/db/migrations/0000_initial.sql --local --persist-to=local-store --no-remote && npx wrangler d1 execute vsr-local-database --file=src/db/migrations/0001_wealthy_magdalene.sql --local --persist-to=local-store --no-remote",
    "db:drop": "npx wrangler d1 execute vsr-local-database --file=src/db/migrations/drop.sql --local --persist-to=local-store --no-remote && rm -rf local-store && rm -rf .wrangler",
    "serve:watch": "chokidar './src/**/*' -c 'pnpm serve:death && pnpm serve:build'",
    "serve:build": "pnpm build &> /dev/null && ./dist/bin/vsr.js --debug --daemon=false",
    "serve:death": "echo \"Killing wrangler dev processes...\" && (pkill -f 'wrangler.*dev' || true) && sleep 1 && (pids=$(lsof -ti :1337 2>/dev/null; lsof -ti :3000 2>/dev/null) && [ -n \"$pids\" ] && echo \"Force killing remaining processes: $pids\" && kill -9 $pids || echo \"No remaining processes found\") && echo \"Done.\"",
    "build:dist": "rm -rf ./dist && mkdir -p ./dist/assets/public",
    "build:assets": "cp -r ./src/assets ./dist/ && cp -r ./node_modules/@vltpkg/gui/dist ./dist/assets/public",
    "build:bin": "mkdir -p ./dist/bin/demo && cp -r ./src/bin/demo ./dist/bin/ && esbuild ./src/bin/vsr.ts --outfile=./dist/bin/vsr.js --packages=external --platform=node --format=esm --log-level=silent",
    "build:worker": "npx wrangler deploy --dry-run --outdir dist",
    "build": "pnpm build:dist && pnpm build:assets && pnpm build:worker && pnpm build:bin",
    "typecheck:worker": "tsc -p tsconfig.worker.json --noEmit",
    "typecheck": "pnpm typecheck:bin && pnpm typecheck:worker",
    "deploy": "pnpm build && npx wrangler deploy",
    "test": "vitest"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.68",
    "@cloudflare/workers-types": "^4.20250829.0",
    "@hono-rate-limiter/cloudflare": "^0.2.2",
    "@libsql/client": "^0.15.14",
    "@scalar/hono-api-reference": "^0.9.16",
    "@scalar/types": "^0.2.13",
    "@sentry/cloudflare": "^10.8.0",
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "@types/node": "catalog:",
    "@types/validate-npm-package-name": "^4.0.2",
    "@vltpkg/gui": "workspace:*",
    "@workos-inc/node": "^7.69.1",
    "autoprefixer": "^10.4.21",
    "better-sqlite3": "^12.2.0",
    "chokidar-cli": "^3.0.0",
    "crypto": "npm:webcrypto-core@^1.8.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "esbuild": "^0.25.9",
    "eslint": "catalog:",
    "get-npm-tarball-url": "^2.1.0",
    "hono": "^4.9.5",
    "hono-rate-limiter": "^0.4.2",
    "htmx.org": "^2.0.6",
    "hyperscript.org": "^0.9.14",
    "js-yaml": "^4.1.0",
    "libnpmpack": "^9.0.6",
    "npm-registry-fetch": "^19.0.0",
    "open": "^10.2.0",
    "schemes": "^1.4.0",
    "semver": "catalog:",
    "ssri": "^12.0.0",
    "streaming-tarball": "^1.0.3",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.5",
    "undici": "^7.15.0",
    "uuid": "^11.1.0",
    "validate-npm-package-name": "6.0.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@hono/sentry": "^1.2.2",
    "@hono/zod-openapi": "^0.19.10",
    "@vltpkg/package-info": "workspace:*",
    "@vltpkg/package-json": "workspace:*",
    "@vltpkg/server": "workspace:*",
    "@vltpkg/vlt-json": "workspace:*",
    "minargs": "^2.1.0",
    "path-scurry": "^2.0.0",
    "wrangler": "^4.33.1",
    "zod": "^3.25.76"
  }
}
