{
  "name": "@vltpkg/run",
  "description": "Run package.json scripts and execute commands",
  "version": "0.0.0-13",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vltpkg/vltpkg.git",
    "directory": "src/run"
  },
  "tshy": {
    "selfLink": false,
    "liveDev": true,
    "dialects": [
      "esm"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "dependencies": {
    "@vltpkg/error-cause": "workspace:*",
    "@vltpkg/package-json": "workspace:*",
    "@vltpkg/promise-spawn": "workspace:*",
    "@vltpkg/types": "workspace:*",
    "foreground-child": "^3.3.1",
    "walk-up-path": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.15.3",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "tap": "^21.1.0",
    "tshy": "^3.0.2",
    "typedoc": "~0.27.9",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.31.1"
  },
  "license": "BSD-2-Clause-Patent",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "format": "prettier --write . --log-level warn --ignore-path ../../.prettierignore --cache",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --cache",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "prepack": "tshy",
    "snap": "tap",
    "test": "tap",
    "posttest": "tsc --noEmit",
    "tshy": "tshy",
    "typecheck": "tsc --noEmit"
  },
  "tap": {
    "extends": "../../tap-config.yaml"
  },
  "prettier": "../../.prettierrc.js",
  "module": "./src/index.ts",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "default": "./src/index.ts"
      }
    }
  },
  "files": [
    "dist"
  ]
}
