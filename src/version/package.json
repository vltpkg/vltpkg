{
  "name": "@vltpkg/version",
  "version": "0.0.0-15",
  "description": "Version command for vlt - increments package.json version and creates git tags",
  "author": "vlt contributors",
  "license": "BlueOak-1.0.0",
  "funding": {
    "url": "https://github.com/sponsors/vltpkg"
  },
  "homepage": "https://vlt.sh",
  "bugs": {
    "url": "https://github.com/vltpkg/vltpkg/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vltpkg/vltpkg.git",
    "directory": "src/version"
  },
  "publishConfig": {
    "access": "public"
  },
  "module": "./src/index.ts",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "default": "./src/index.ts"
      }
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": "20 || >=22"
  },
  "scripts": {
    "format": "prettier --write . --log-level warn --ignore-path ../../.prettierignore --cache",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --cache",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "prepack": "tshy",
    "snap": "tap",
    "test": "tap",
    "posttest": "tsc --noEmit",
    "tshy": "tshy",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@vltpkg/error-cause": "workspace:*",
    "@vltpkg/git": "workspace:*",
    "@vltpkg/package-json": "workspace:*",
    "@vltpkg/semver": "workspace:*",
    "@vltpkg/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "tap": "^21.0.1",
    "tshy": "^3.0.2",
    "typescript": "5.6"
  },
  "tshy": {
    "selfLink": false,
    "liveDev": true,
    "dialects": [
      "esm"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "tap": {
    "extends": "../../tap-config.yaml"
  },
  "prettier": "../../.prettierrc.js"
}
