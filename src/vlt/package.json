{
  "name": "vlt",
  "description": "A very fast JavaScript package manager",
  "version": "0.0.0-0",
  "tshy": {
    "selfLink": false,
    "dialects": [
      "esm"
    ],
    "exports": {
      "./package.json": "./package.json",
      "./config": "./src/config/index.ts",
      ".": "./src/index.ts"
    }
  },
  "bin": {
    "vlt": "./dist/esm/index.js",
    "vlr": "./dist/esm/vlr.js",
    "vlx": "./dist/esm/vlx.js",
    "vlrx": "./dist/esm/vlrx.js",
    "vlix": "./dist/esm/vlix.js"
  },
  "dependencies": {
    "@vltpkg/error-cause": "workspace:*",
    "@vltpkg/graph": "workspace:*",
    "@vltpkg/package-json": "workspace:*",
    "@vltpkg/promise-spawn": "workspace:*",
    "@vltpkg/run": "workspace:*",
    "@vltpkg/types": "workspace:*",
    "@vltpkg/workspaces": "workspace:*",
    "@vltpkg/xdg": "workspace:*",
    "ansi-to-pre": "^1.0.5",
    "chalk": "^5.3.0",
    "jackspeak": "^3.4.0",
    "polite-json": "^5.0.0",
    "walk-up-path": "^3.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.8",
    "eslint": "^9.8.0",
    "globals": "^14.0.0",
    "prettier": "^3.3.2",
    "tap": "^20.0.1",
    "tshy": "^1.16.1",
    "typedoc": "^0.26.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1"
  },
  "scripts": {
    "preinstall": "node scripts/make-vlt-bin.js",
    "preversion": "npm test",
    "postversion": "npm publish",
    "prepublishOnly": "git push origin --follow-tags",
    "prepare": "tshy",
    "pretest": "npm run prepare",
    "presnap": "npm run prepare",
    "test": "tap",
    "snap": "tap",
    "format": "prettier --write . --log-level warn --ignore-path ../../.prettierignore --cache",
    "typedoc": "typedoc",
    "lint:format": "prettier --check . --ignore-path ../../.prettierignore --cache",
    "lint": "npm run lint:format; npm run lint:code",
    "lint:code": "eslint ."
  },
  "tap": {
    "extends": "../../tap-config.yaml"
  },
  "prettier": "../../.prettierrc.json",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    "./config": {
      "import": {
        "source": "./src/config/index.ts",
        "types": "./dist/esm/config/index.d.ts",
        "default": "./dist/esm/config/index.js"
      }
    },
    ".": {
      "import": {
        "source": "./src/index.ts",
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  }
}
