{
  "name": "@vltpkg/workspaces",
  "description": "Utility for working with vlt workspaces",
  "version": "0.0.0-0",
  "tshy": {
    "selfLink": false,
    "dialects": [
      "esm"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "dependencies": {
    "@vltpkg/dep-id": "workspace:*",
    "@vltpkg/error-cause": "workspace:*",
    "@vltpkg/package-json": "workspace:*",
    "@vltpkg/types": "workspace:*",
    "glob": "^10.4.1",
    "graph-run": "^1.0.3",
    "minimatch": "^9.0.4",
    "path-scurry": "^1.11.1",
    "polite-json": "^5.0.0",
    "walk-up-path": "^3.0.1"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@types/eslint__js": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tap": "catalog:",
    "tshy": "catalog:",
    "typedoc": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "scripts": {
    "format": "prettier --write . --log-level warn --ignore-path ../../.prettierignore --cache",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --cache",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "prepare": "tshy",
    "prepublishOnly": "git push origin --follow-tags",
    "presnap": "npm run prepare",
    "snap": "tap",
    "pretest": "npm run prepare",
    "test": "tap",
    "typedoc": "typedoc",
    "preversion": "npm test",
    "postversion": "npm publish"
  },
  "tap": {
    "extends": "../../tap-config.yaml"
  },
  "prettier": "../../.prettierrc.json",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "source": "./src/index.ts",
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  }
}
