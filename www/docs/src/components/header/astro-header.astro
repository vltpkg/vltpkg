---
import type { Props } from '@astrojs/starlight/props'
import Search from '@astrojs/starlight/components/Search.astro'
import Logo from '@/components/header/logo.tsx'
import MobileSidebar from '@/components/sidebar/mobile-sidebar.tsx'
import LinearMenu from '@/components/header/linear-menu'

const { sidebar } = Astro.props
---

<nav
  class="mx-auto mb-4 flex w-full max-w-screen-xl items-center justify-between gap-x-4 px-6 py-6">
  <a href="https://www.vlt.sh/" class="h-[43px] w-[94px]">
    <Logo
      client:only="react"
      {...{ ...Astro.props, labels: undefined } as any}
    />
  </a>

  <div
    class="flex w-full items-center justify-end justify-items-end gap-2">
    <MobileSidebar
      client:load
      sidebar={sidebar}
      {...{ ...Astro.props, labels: undefined } as any}
    />
    <LinearMenu
      client:only="react"
      {...{ ...Astro.props, labels: undefined } as any}
    />
    <Search {...Astro.props} />
  </div>
</nav>
